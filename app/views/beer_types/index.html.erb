<h3>Tipos de cervejas</h3>

<!-- Chips initialization -->
<%= javascript_tag do %>
  var data = [];

  <% @types.each do |type| %>
    var tag = {
      tag: "<%= j type.name %>",
      id: <%= j type.id.to_s %>,
      controller: "beer_types"
    };

    data.push(tag);
  <% end %>
<% end %>

<h5>Adicionar</h5>


<% flash.each do |key, value| %>
  <%= content_tag :li, value, class: "#{key}" %>
<% end %>

<%= form_for @beer_type, html: { novalidate: true }, class: "col s12" do |f| %>

  <% if @beer_type.errors.any? %>
    <% @beer_type.errors.each do |attribute, message| %>
      <%= content_tag :li, message, class: "error" %>
    <% end %>
  <% end %>

  <br/>
  <div class="row">
    <div class="input-field col s6">
      <%= f.text_field :name, class: 'validate' %>
      <%= f.label :name, "Nome" %>
    </div>

    <div class="input-field col s6">
      <button class="btn-floating btn-large waves-effect waves-light" type="submit" name="action">
        <i class="material-icons">add</i>
       </button>
    </div>
  </div>
<% end %>

<h5>Existentes</h5><br/>
<div class="chips-initial" style="border-bottom: 0px;"></div>

<!-- Modal Structure Confirm-->
<div id="delete_chip_modal" class="modal">
  <div class="modal-content">
    <h4>Remover tipo de cerveja</h4>
    <p>Tem certeza que deseja excluir permanentemente o tipo de cerveja:
      <strong><span id="delete_chip_confirmation"></span></strong>
    </p>
  </div>
  <div class="modal-footer">
    <%= link_to "Cancelar", beer_types_url, method: :get,
      class: "modal-action modal-close waves-effect waves-red btn-flat" %>

    <%= link_to "Remover", "", id: :destroy_button, method: :delete,
      class: "modal-action modal-close waves-effect waves-green btn-flat" %>
  </div>
</div>

<!-- Modal Structure Container -->
<div id="edit_chip_modal" class="modal"></div>
