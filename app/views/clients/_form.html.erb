<%= form_for client do |f| %>

  <% if client.errors.any? %>
    <% glass.errors.each do |attribute, message| %>
      <%= content_tag :li, message, class: "error" %>
    <% end %>
  <% end %>

  <br/>
  <div class="row">
    <div class="input-field col s9">
      <%= f.text_field :full_name %>
      <%= f.label :full_name, "Nome Completo" %>
    </div>

    <div class="input-field col s3">
      <%= f.text_field :document_number %>
      <%= f.label :document_number, "CPF" %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s4">
      <%= f.text_field :email %>
      <%= f.label :email, "E-mail" %>
    </div>

    <div class="input-field col s4">
      <%= f.text_field :phone, class: "phone" %>
      <%= f.label :phone, "Telefone" %>
    </div>

    <div class="input-field col s4">
      <%= f.text_field :birthdate, class: "date" %>
      <%= f.label :birthdate, "Data de nascimento" %>
    </div>
  </div>

  <h5>Endereço</h5>
  <%= form_for address do |ff| %>
    <div class="row">
      <div class="input-field col s4">
        <%= ff.text_field :zip_code, class: "zip_code" %>
        <%= ff.label :zip_code, "CEP" %>
      </div>

      <div class="input-field col s8">
        <%= ff.text_field :street %>
        <%= ff.label :street, "Rua" %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s4">
        <%= ff.text_field :number, class: "number" %>
        <%= ff.label :number, "Número" %>
      </div>

      <div class="input-field col s4">
        <%= ff.text_field :complement %>
        <%= ff.label :complement, "Complemento" %>
      </div>

      <div class="input-field col s4">
        <%= ff.text_field :neighborhood %>
        <%= ff.label :neighborhood, "Bairro" %>
      </div>
    </div>

    <div clas="row">
      <div class="input-field col s4">
        <%= ff.text_field :city %>
        <%= ff.label :city, "Cidade" %>
      </div>

      <div class="input-field col s4">
        <%= ff.text_field :state %>
        <%= ff.label :state, "Estado" %>
      </div>

      <div class="input-field col s4">
        <%= ff.text_field :state %>
        <%= ff.label :country, "País" %>
      </div>
    </div>
  <% end %>

  <div class="right-align">
    <%= button_tag class: "waves-effect waves-light btn" do %>
      <i class="material-icons left">send</i><%= button_name %>
    <% end %>
  </div>
<% end %>

<br/>
